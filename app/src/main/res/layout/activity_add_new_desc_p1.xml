<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="@drawable/background_app">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.050000012">

        <LinearLayout
            android:id="@+id/linearLayout13"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/custom_spinner"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/recViewQuestionAdmin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/txtContentQuestionAdminTitleP1"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:lines="3"
                android:paddingLeft="5dp"
                android:text="Bộ câu hỏi"
                android:textColor="#009688"
                android:textSize="18dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txtNumTilte"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:lines="3"
                android:paddingLeft="5dp"
                android:text="| Câu :"
                android:textColor="#009688"
                android:textSize="18dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txtNumAddQuestP1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:lines="3"
                android:paddingLeft="5dp"
                android:text="1"
                android:textColor="#009688"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>

            <EditText
                android:id="@+id/edtResultP1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:paddingLeft="10dp"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:hint="Nhập kết quả của câu hỏi"
                android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:gravity="center">


            <ScrollView
                android:layout_width="220dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtFilePathAudioP1"
                    android:padding="5dp"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:text="filepath"
                    android:textStyle="italic" />
            </ScrollView>

            <Button
                android:id="@+id/btnGetImgP1"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@drawable/mybtn2"
                android:text="chọn hình ảnh"
                android:textColor="#fff" />
        </LinearLayout>

        <Button
            android:id="@+id/btnAddAQuestionP1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/mybtn2"
            android:text="Thêm"
            android:textColor="#fff" />

        <LinearLayout
            android:id="@+id/linearLayout15"
            android:layout_width="310dp"
            android:layout_height="310dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/mybutton"
            android:layout_gravity="center"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/imgViewP1"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_baseline_image_search_24" />
        </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>