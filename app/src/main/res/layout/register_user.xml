<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_app"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/re" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toeic Exam"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:textColor="#03DAC5"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_user_name"
        android:background="@drawable/rounded_edittext"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:paddingLeft="-30dp"
        android:textSize="20dp"
        android:drawableLeft="@mipmap/ic_user_foreground"
        android:hint="Nhập tên người dùng"
        android:layout_gravity="center"
        android:ems="10"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/edt_phone_reg"
        android:background="@drawable/rounded_edittext"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:paddingLeft="-30dp"
        android:textSize="20dp"
        android:drawableLeft="@mipmap/ic_phone_foreground"
        android:hint="Nhập số điện thoại"
        android:layout_gravity="center"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/edt_pass_reg"
        android:background="@drawable/rounded_edittext"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:paddingLeft="-30dp"
        android:textSize="20dp"
        android:drawableLeft="@mipmap/ic_pass_foreground"
        android:hint="Nhập mật khẩu"
        android:layout_gravity="center"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/edt_pass_re_reg"
        android:background="@drawable/rounded_edittext"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:paddingLeft="-30dp"
        android:textSize="20dp"
        android:drawableLeft="@mipmap/ic_pass_foreground"
        android:hint="Nhập lại mật khẩu"
        android:layout_gravity="center"
        android:ems="10"
        android:inputType="textPassword" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/chb__rules"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="25dp"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:text="Đồng ý với Điều khoản chính sách bảo mật của chúng tôi."
            android:textColor="#EB3F6F"
            android:textStyle="italic" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_reg"
        android:layout_width="195dp"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/mybutton"
        android:text="Đăng Ký"
        android:textColor="@color/colorAccent"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/textView7"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bạn đã có tâì khoản ?" />

        <TextView
            android:id="@+id/txt_login"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Hyperlink"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="ĐĂNG NHẬP" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_skip_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        style="@style/Hyperlink"
        android:textStyle="bold"
        android:text="Bỏ Qua" />
</LinearLayout>