<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:background="@drawable/background_app">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/linearLayout13"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/custom_spinner"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/recViewQuestionAdmin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/txtNameExamQuesEditP3"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:lines="3"
                android:paddingLeft="5dp"
                android:text="Bộ câu hỏi"
                android:textColor="#009688"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtNameQuesEditP3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:lines="3"
                android:paddingLeft="5dp"
                android:text="Bộ câu hỏi"
                android:textColor="#009688"
                android:textSize="16dp"
                android:textStyle="bold" />

        </LinearLayout>

        <EditText
            android:id="@+id/edtQuesContentEditP3"
            android:layout_width="match_parent"
            android:paddingTop="10dp"
            android:gravity="top"
            android:layout_height="100dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:hint="Nhập nội dung của câu hỏi"
            android:inputType="textMultiLine"
            android:paddingLeft="10dp" />
        <EditText
            android:id="@+id/edtAnsAEditP3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:hint="Nhập đáp án A"
            android:inputType="textPersonName"
            android:paddingLeft="10dp" />
        <EditText
            android:id="@+id/edtAnsBEditP3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:hint="Nhập đáp án B"
            android:inputType="textPersonName"
            android:paddingLeft="10dp" />
        <EditText
            android:id="@+id/edtAnsCEditP3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:hint="Nhập đáp án C"
            android:inputType="textPersonName"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/edtAnsDEditP3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:hint="Nhập đáp án D"
            android:inputType="textPersonName"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/edtResultEditP3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:hint="Nhập kết quả câu hỏi"
            android:inputType="textPersonName"
            android:paddingLeft="10dp" />

        <Button
            android:id="@+id/btnAddAQuestionEditP3"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/mybtn2"
            android:text="Sửa"
            android:textColor="#fff" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>