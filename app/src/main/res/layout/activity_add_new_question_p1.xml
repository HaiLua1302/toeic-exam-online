<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_app">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/edtAddExamNameP1"
                android:layout_width="350dp"
                android:paddingLeft="10dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:hint="Nhập tên bộ đề"
                android:inputType="textPersonName" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imgRefreshP1"
                android:paddingLeft="8dp"
                android:src="@drawable/ic_baseline_refresh_24"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="right">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/txtFilePathAudio1"
                android:textStyle="italic"
                android:text="file audio"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:id="@+id/btnAddAudioP1"
                android:textColor="#fff"
                android:background="@drawable/mybtn2"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:text="thêm file"/>
            <Button
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:id="@+id/btnSaveAudioP1"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="25dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/mybutton"
                android:paddingLeft="8dp"
                android:drawableLeft="@drawable/ic_baseline_add_24"/>
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:id="@+id/btnIntentToAddQuesP1"
            android:textColor="#fff"
            android:background="@drawable/mybtn2"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="thêm"/>
        <LinearLayout
            android:id="@+id/linearLayout13"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/custom_spinner"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/SttTitle"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="Stt"
                android:textColor="#009688"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtContentQuestionAdminTitle"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:gravity="center"
                android:lines="3"
                android:paddingLeft="5dp"
                android:text="Hình Ảnh"
                android:textColor="#009688"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtIdQuestionTitle"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="Đáp án"
                android:textColor="#009688"
                android:textSize="18dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgSelectEditQuesTitle"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_edit_24"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recViewListQuestEdit"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</FrameLayout>