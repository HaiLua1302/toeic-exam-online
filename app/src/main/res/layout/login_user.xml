<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:background="@drawable/background_app"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/login_icon" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toeic Exam"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textColor="#03DAC5"
        android:textSize="20dp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/edt_email"
        android:background="@drawable/rounded_edittext"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:textSize="20dp"
        android:drawableLeft="@mipmap/ic_phone_foreground"
        android:hint="Nhập email"
        android:layout_gravity="center"
        android:inputType="textEmailAddress"
        android:paddingLeft="-30dip"
        />

    <EditText
        android:id="@+id/edt_pass_login"
        android:background="@drawable/rounded_edittext"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:textSize="20dp"
        android:drawableLeft="@mipmap/ic_pass_foreground"
        android:hint="Nhập mật khẩu"
        android:inputType="textPassword"
        android:paddingLeft="-30dip"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/txt_quenmatkhau"
        style="@style/Hyperlink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_gravity="center"
        android:text="Quên mật khẩu"
        android:textStyle="italic" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="195dp"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/mybutton"
        android:text="Đăng Nhập"
        android:textColor="@color/colorAccent"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textSize="16dp"
        android:text="- or -" />

    <Button
        android:id="@+id/btn_login_gg"
        android:layout_width="333dp"
        android:layout_height="41dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/mybutton"
        android:drawableLeft="@mipmap/ic_logo_gg_foreground"
        android:paddingLeft="-30dip"
        android:paddingRight="60dp"
        android:singleLine="true"
        android:text="Đăng nhập bằng Google"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn chưa có tài khoản ?" />
        <TextView
            android:id="@+id/txt_register"
            style="@style/Hyperlink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tạo tài khoản ở đây."
            android:textStyle="italic" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Hyperlink"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:text="Bỏ qua" />

</LinearLayout>