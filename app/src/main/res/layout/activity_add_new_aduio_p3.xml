<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_app">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/border"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtNameExam2P3"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:lines="3"
                android:paddingLeft="5dp"
                android:text="Bộ câu hỏi"
                android:textColor="#009688"
                android:textSize="18dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txtNameQues2P3"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:lines="3"
                android:paddingLeft="5dp"
                android:text="Bộ câu hỏi"
                android:textColor="#009688"
                android:textSize="18dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgRefreshEdit2P3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:paddingRight="5dp"
                android:paddingLeft="8dp"
                android:src="@drawable/ic_baseline_refresh_24" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="right">
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/txtFilePathEditAudio2P3"
                    android:layout_width="230dp"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:gravity="left"
                    android:text="filepath"
                    android:textStyle="italic" />
            </ScrollView>
            <Button
                android:id="@+id/btnEditAudio2P3"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:background="@drawable/mybtn2"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:text="Sửa file"/>
            <Button
                android:id="@+id/btnSaveEditAudio2P3"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="25dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/mybutton"
                android:paddingLeft="8dp"
                android:drawableLeft="@drawable/ic_baseline_add_24"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/mybutton"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgPlayAudEdit2P3"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_play_arrow_24" />

                <TextView
                    android:id="@+id/txtCurrentTimeEdit2P3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="0:00"
                    android:textSize="18dp" />

                <SeekBar
                    android:id="@+id/playerSeekBarEdit2P3"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/txtTimeTotalEdit2P3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="0:00"
                    android:textSize="18dp" />
            </LinearLayout>
            <Button
                android:id="@+id/btnAddNewQues2P3"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="left"
                android:textColor="#fff"
                android:background="@drawable/mybtn2"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:text="Thêm"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout13"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/border"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/SttTitle"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="Stt"
                android:textColor="#009688"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtContentQuestionAdminTitle"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:gravity="center"
                android:lines="3"
                android:paddingLeft="5dp"
                android:text="Nội Dung Câu Hỏi"
                android:textColor="#009688"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtIdQuestionTitle"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="Đáp án"
                android:textColor="#009688"
                android:textSize="18dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgSelectEditQuesTitle"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_edit_24"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recViewListQuestEdit2P3"
            android:layout_width="match_parent"
            android:layout_height="450dp" />
        <Button
            android:id="@+id/btnDelExam2P3"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:background="@drawable/mybtn2"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="Xóa"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>