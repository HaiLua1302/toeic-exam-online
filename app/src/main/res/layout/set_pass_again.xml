<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_app"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/quenmk"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hãy nhập SDT đăng ký tài khoản \n để được đặt lại mật khẩu"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:textColor="#7B7B7D"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp">
    <EditText
        android:id="@+id/edt_phone_otp"
        android:ems="10"
        android:background="@drawable/rounded_edittext"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:drawableLeft="@mipmap/ic_pass_foreground"
        android:hint="Nhập số điện thoại"
        android:inputType="phone"
        android:paddingLeft="-30dip"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/btn_send_otp"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:background="@drawable/mybtn2"
        android:textColor="#F8F9FB"
        android:textSize="18dp"
        android:text="GỬI" />
</LinearLayout>


    <EditText
        android:id="@+id/btn_otp"
        android:ems="10"
        android:layout_width="405dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_edittext"
        android:drawableLeft="@mipmap/ic_pass_foreground"
        android:hint="Nhập mã OTP"
        android:paddingLeft="-30dip"
        android:textSize="20dp"
        android:inputType="phone"/>

    <EditText
        android:id="@+id/btn_input_pass"
        android:ems="10"
        android:layout_width="405dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_edittext"
        android:drawableLeft="@mipmap/ic_pass_foreground"
        android:hint="Nhập mật khẩu"
        android:paddingLeft="-30dip"
        android:textSize="20dp"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editTextTextPassword2"
        android:ems="10"
        android:layout_width="405dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_edittext"
        android:drawableLeft="@mipmap/ic_pass_foreground"
        android:hint="Nhập lại mật khẩu"
        android:paddingLeft="-30dip"
        android:textSize="20dp"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/button2"
        android:layout_marginTop="100dp"
        android:background="@drawable/mybutton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="#50c3ca"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:text="Đặt lại mật khẩu" />
</LinearLayout>