<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_app"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/quenmk"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hãy nhập SDT đăng ký tài khoản \n để được đặt lại mật khẩu"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:textColor="#7B7B7D"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp">
    <EditText
        android:id="@+id/edt_email_otp"
        android:ems="10"
        android:background="@drawable/rounded_edittext"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:drawableLeft="@mipmap/ic_phone_foreground"

        android:hint="Nhập email"
        android:inputType="textEmailAddress"

        android:hint="Nhập số điện thoại"
        android:inputType="phone"

        android:paddingLeft="-30dip"
        android:layout_gravity="center" />
</LinearLayout>
    <Button
        android:id="@+id/btnGui"
        android:layout_marginTop="30dp"
        android:background="@drawable/mybutton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="#50c3ca"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:text="Gửi" />
</LinearLayout>