<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_app"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mybutton"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_play_2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_baseline_play_arrow_24" />

        <TextView
            android:id="@+id/txt_time_play_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="18dp"
            android:text="1:03" />
        <SeekBar
            android:id="@+id/seekBar_2"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/img_replay_2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_baseline_replay_24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_A2"
            android:layout_width="22dp"
            android:layout_height="65dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:background="@drawable/bnt_answer"
            android:text="A"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_B2"
            android:layout_width="22dp"
            android:layout_height="65dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:background="@drawable/bnt_answer"
            android:text="B"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_C2"
            android:layout_width="22dp"
            android:layout_height="65dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@drawable/bnt_answer"
            android:text="C"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>