<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_app">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/border"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtNameExam2P6"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:lines="3"
                android:paddingLeft="5dp"
                android:text="idExam"
                android:textColor="#009688"
                android:textSize="18dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txtNameQues2P6"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:lines="3"
                android:paddingLeft="5dp"
                android:text="idQues"
                android:textColor="#009688"
                android:textSize="18dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgRefreshEdit2P6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:paddingRight="5dp"
                android:paddingLeft="8dp"
                android:src="@drawable/ic_baseline_refresh_24" />
        </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/txtFilePathEditAudio2P6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:gravity="left"
                    android:text="filepath"
                    android:textStyle="italic" />
            </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnEditAudio2P6"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:background="@drawable/mybtn2"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:text="Sửa Đoạn Văn"/>
            <Button
                android:id="@+id/btnAddNewQues2P6"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:background="@drawable/mybtn2"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:text="Thêm câu hỏi"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout13"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/border"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/SttTitle"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="Stt"
                android:textColor="#009688"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtContentQuestionAdminTitle"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:gravity="center"
                android:lines="3"
                android:paddingLeft="5dp"
                android:text="Mã câu hỏi"
                android:textColor="#009688"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtIdQuestionTitle"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="Đáp án"
                android:textColor="#009688"
                android:textSize="18dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgSelectEditQuesTitle"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_edit_24"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recViewListQuestEdit2P6"
            android:layout_width="match_parent"
            android:layout_height="380dp" />

        <Button
            android:id="@+id/btnDelExam2P6"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:background="@drawable/mybtn2"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="Xóa"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>